<%= link_to('<< Back to List', {action: 'index'}, class: 'back-link') %>
<div class="sections delet">
<h1>Delete Section</h1>
<%= form_tag(action: 'destroy', id: @section.id) do %>
  <p>Are you sure you want to permanently delete this section?</p>
  <p class="reference-name"><%= @section.name %></p>
  <div class="form-buttons">
    <%= submit_tag("Delete Section") %>
  </div>
<% end %>
</div>
