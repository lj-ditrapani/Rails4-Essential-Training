<%= link_to('<< Back to List', {action: 'index'}, class: 'back-link') %>
<div class="sections show">
<h1>Show Section</h1>

<table summary="Section detail view">
  <tr>
    <th>Name</th>
    <td><%= @section.name %></td>
  </tr>
  <tr>
    <th>Page</th>
    <td>
      <%= if @section.page.nil?
            'None'
          else
            @section.page.name
          end %>
    </td>
  </tr>
  <tr>
    <th>Position</th>
    <td><%= @section.position %></td>
  </tr>
  <tr>
    <th>Visible?</th>
    <td><%= @section.visible ? 'true' : 'false' %></td>
  </tr>
  <tr>
    <th>Content Type</th>
    <td><%= @section.content_type %></td>
  </tr>
  <tr>
    <th>Content</th>
    <td><%= @section.content %></td>
  </tr>
  <tr>
    <th>Created</th>
    <td><%= @section.created_at %></td>
  </tr>
  <tr>
    <th>Updated</th>
    <td><%= @section.updated_at %></td>
  </tr>
</table>
</div>
