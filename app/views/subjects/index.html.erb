<% if !flash[:notice].blank? %>
  <div class="notice">
    <%= flash[:notice] %>
  </div>
<% end %>
<div class="subjects index">
  <h1>List of Subjects</h1>
  <%= link_to('Add New Subject', {action: 'new'}, class: 'action new') %>

  <table class="listing" summary="Subject list">
    <tr class='header'>
      <th> </th>
      <th>Subject</th>
      <th>Visible</th>
      <th>Pages</th>
      <th>Actions</th>
    </tr>
    <% @subjects.each do |subject| %>
    <tr>
      <td><%= subject.position %></td>
      <td><%= subject.name %></td>
      <td><%= subject.visible ? 'Yes' : 'No' %></td>
      <td><%= subject.pages.size %></td>
      <td>
        <%= link_to('Show',
                    {action: 'show', id: subject.id},
                    class: 'action show') %>
        <%= link_to('Edit',
                    {action: 'edit', id: subject.id},
                    class: 'action show') %>
        <%= link_to('Delete',
                    {action: 'delete', id: subject.id},
                    class: 'action show') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
